div#sub-nav.navbar.navbar-default.navbar-static-top.greyish(style='margin-top:-20px;',ng-controller='navbarSubCtrl')
	div.container(style='color: white;')
		div.navbar-collapse.collapse(collapse='isCollapsed')
			ul.nav.navbar-nav.nav-text
				li
					if type == "schedule"
						h3(style='color:black;') Schedule
				li(style='margin-left:20px;margin-right:20px;')
					select.form-control(style='margin-top:10px;', ng-model='current_campaign', ng-change='change(current_campaign)')
						option(ng-repeat='campaign in campaigns', value='{{campaign._id}}' ng-bind='campaign.name') Loading...
				li
					if type == "dashboard"
						a.chosen(href='', ng-click='go("dashboard")') Dashboard
					else if type == 'dialer'
						a(href='', ng-click='go("dashboard")') Dashboard
				li
					if type == "dialer"
						a.chosen(href='', ng-click='go("dialer")') Dialer
					else if type == 'dashboard'
						a(href='', ng-click='go("dialer")') Dialer